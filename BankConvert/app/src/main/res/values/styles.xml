<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>
    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/my_spinner_text_color</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="submitButton">
        <item name="android:textColor">#FFC107</item>
        <item name="android:textSize">22dp</item>
        <item name="android:radius">5dp</item>
    </style>

    <style name="welcomeTextView">
        <item name="android:fontFamily">@font/aclonica</item>
        <item name="android:textColor">#FFC107</item>
        <item name="android:textSize">25dp</item>
    </style>

    <style name="accountTextView">
        <item name="android:fontFamily">@font/arbutus_slab</item>
        <item name="android:textColor">#FFC107</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="valuesTextView">
        <item name="android:fontFamily">@font/advent_pro_medium</item>
        <item name="android:textColor">#FFC107</item>
        <item name="android:textSize">18dp</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="listTextView">
        <item name="android:fontFamily">@font/arbutus_slab</item>
        <item name="android:textColor">#FFC107</item>
        <item name="android:background">@drawable/text_otherwise_background_gradient</item>
        <item name="android:textSize">20dp</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
