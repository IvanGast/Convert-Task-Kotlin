<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_history"
        tools:context=".HistoryActivity" android:background="@drawable/background_gradient">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/linearLayout" app:layout_constraintBottom_toTopOf="@+id/linearLayout2">
        <Button
                android:text="Visi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/allButton" android:layout_weight="1"
                android:background="@drawable/button_gradient" android:textSize="18sp"
                android:textColor="@android:color/black"
                android:textStyle="bold" android:textAllCaps="false" android:fontFamily="@font/adamina"/>
        <Button
                android:text="EUR"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/eurButton" android:layout_weight="1"
                android:textStyle="bold" android:textSize="18sp" android:background="@drawable/button_gradient" android:fontFamily="@font/adamina"/>
        <Button
                android:text="USD"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/usdButton" android:layout_weight="1"
                android:textStyle="bold" android:background="@drawable/button_gradient" android:textSize="18sp" android:fontFamily="@font/adamina"/>
        <Button
                android:text="JPY"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" android:id="@+id/jpyButton" android:layout_weight="1"
                android:textStyle="bold" android:textSize="18sp" android:background="@drawable/button_gradient" android:fontFamily="@font/adamina"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintBottom_toTopOf="@+id/myHistoryListView" android:id="@+id/linearLayout2"
            android:padding="2dp">
        <TextView
                style="@style/valuesTextView"
                android:text="Kiekis : 0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/quantityTextView" android:background="@drawable/text_background_gradient"/>
        <TextView
                style="@style/valuesTextView"
                android:text="Čia nenurodoma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/overallTextView" android:layout_marginTop="1dp" android:layout_marginBottom="1dp"
                android:background="@drawable/text_otherwise_background_gradient"/>
        <TextView
                style="@style/valuesTextView"
                android:text="Čia nenurodoma"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/totalCommissionTextView" android:background="@drawable/text_background_gradient"/>
    </LinearLayout>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/myHistoryListView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="140dp"/>
</android.support.constraint.ConstraintLayout>